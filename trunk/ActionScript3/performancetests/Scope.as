 iB:Number = 5;			// Initialization:			// Public getter / setters:			// Public Methods:		// tare method that will be run to calculate the base time required to run the loop		// so it can be subtracted from the other test results.		public function tare():void {			for (var i:uint=0; i<loops; i++) {				var c:Number = 50;			}		}				public function literals():void {			for (var i:uint=0; i<loops; i++) {				var c:Number = 10*5+10+5/10;			}		}			public function local():void {			var lA:Number = 10;			var lB:Number = 5;			for (var i:uint=0; i<loops; i++) {				var c:Number = lA*lB+lA+lB/lA;			}		}				public function instance():void {			for (var i:uint=0; i<loops; i++) {				var c:Number = iA*iB+iA+iB/iA;			}		}				public function instanceExplicit():void {			for (var i:uint=0; i<loops; i++) {				var c:Number = this.iA*this.iB+this.iA+this.iB/this.iA;			}		}				public function staticVars():void {			for (var i:uint=0; i<loops; i++) {				var c:Number = sA*sB+sA+sB/sA;			}		}				public function staticExplicit():void {			for (var i:uint=0; i<loops; i++) {				var c:Number = Scope.sA*Scope.sB+Scope.sA+Scope.sB/Scope.sA;			}		}				public function constants():void {			for (var i:uint=0; i<loops; i++) {				var c:Number = cA*cB+cA+cB/cA;			}		}			// Protected Methods:			}	}